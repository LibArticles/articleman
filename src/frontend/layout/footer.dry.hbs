<div>
  <div class="footer">
    <div class="button{{#if page.home}} highlighted {{/if}}">
      {{{icons.home}}}
      <span>Home</span>
    </div>
    {{#if isAdmin}}
      <div class="button{{#if page.people}} highlighted {{/if}}">
        {{{icons.people}}}
        <span>People</span>
      </div>
      <div class="button{{#if page.settings}} highlighted {{/if}}">
        {{{icons.settings}}}
        <span>Settings</span>
      </div>
    {{else}}
      <div class="button{{#if page.you}} highlighted {{/if}}">
        {{{icons.you}}}
        <span>Your work</span>
      </div>
    {{/if}}
    {{#if isDebugMode}}
      <div class="button{{#if page.debug}} highlighted {{/if}}">
        {{{icons.debug}}}
        <span>System</span>
      </div>
    {{/if}}
  </div>
</div>