{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"noImplicitAny": true,
		"lib": ["ESNext"],
		"module": "ESNext",
		"target": "es2018",
		"allowJs": false,
		"allowArbitraryExtensions": true,
		"resolveJsonModule": true,
		"paths": {
			"lib/*": ["lib/*"],
			"src/*": ["src/*"],
			"locale/*": ["locale/*"],
			"shared/*": ["../shared/*"]
		},
		"baseUrl": ".",
		"experimentalDecorators": true
	},

	"include": [
		"src/**/*",
		"lib/**/*",
		"build/*",
		"node_modules/@types",
		"types",
		"*",
	],
	"exclude": ["node_modules", "dist"],
}
