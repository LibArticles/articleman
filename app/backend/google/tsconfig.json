{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"noImplicitAny": true,
		"lib": ["ESNext"],
		"module": "ESNext",
		"target": "es2018",
		"allowJs": true,
		"allowArbitraryExtensions": true,
		"resolveJsonModule": true,
		"paths": {
			"lib/*": ["lib/*"],
			"lib/external/*": ["lib/external/*"],
			"lib/external/compress-json": ["lib/external/compress-json/src"],
			"src/*": ["src/*"],
			"locale/*": ["locale/*"],
			"shared/*": ["../../shared/*"]
		},

		"strict": true,
		"strictPropertyInitialization": false,
		"isolatedModules": true,
		"importHelpers": true,

		"baseUrl": ".",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmit": true
	},
	"include": [
		"src/**/*",
		"lib/**/*",
		"build/*",
		"node_modules/@types",
		"types"
	],
	"exclude": ["node_modules", "dist", "@types/ws"]
}
