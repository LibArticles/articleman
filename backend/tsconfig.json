{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"noImplicitAny": true,
		"module": "es2022",
		"target": "es2018",
		"allowJs": false,
		"allowArbitraryExtensions": true,
		"resolveJsonModule": true,
		"paths": {
			"lib/*": ["lib/*"],
			"src/*": ["src/*"],
		},
		"baseUrl": "."
	},

	"include": [
		"src/**/*",
		"lib/**/*",
		"build/*",
		"node_modules/@types",
		"types",
		"*",
	],
	"exclude": ["node_modules", "dist"],
}
