{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "module": "es2022",
    "target": "es2018",
    "allowJs": true,
    "allowArbitraryExtensions": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"]
}
